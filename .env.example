# ============================================================================
# TwinOps Platform Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# ----------------------------------------------------------------------------
# Core Application Settings
# ----------------------------------------------------------------------------
ENVIRONMENT=development
DEBUG=true
API_TITLE=TwinOps API
API_VERSION=0.1.0

# Secret key for JWT tokens and encryption (CHANGE THIS IN PRODUCTION!)
SECRET_KEY=changeme-replace-with-secure-random-key
TWINOPS_SECRET_KEY=changeme-replace-with-secure-random-key
ACCESS_TOKEN_EXPIRE_MINUTES=60

# CORS allowed origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# ----------------------------------------------------------------------------
# Database Connections
# ----------------------------------------------------------------------------

# Neo4j Graph Database
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=changeme-neo4j-password

# Pinecone Vector Database
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENVIRONMENT=us-east-1-aws
PINECONE_INDEX=twinops-prod

# Redis Cache
REDIS_URL=redis://localhost:6379/0

# MongoDB Document Storage
MONGODB_URL=mongodb://localhost:27017/twinops

# ----------------------------------------------------------------------------
# Search & Messaging Infrastructure
# ----------------------------------------------------------------------------

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200

# Apache Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# Temporal Workflow Engine
TEMPORAL_NAMESPACE=twinops
TEMPORAL_TASK_QUEUE=twinops-workflows
TEMPORAL_HOST=localhost:7233

# ----------------------------------------------------------------------------
# External Integrations
# ----------------------------------------------------------------------------

# Slack Bot Integration (PRIMARY USER INTERFACE)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token-here
SLACK_SIGNING_SECRET=your-slack-signing-secret-here
SLACK_APP_TOKEN=xapp-your-slack-app-token-here

# Jira/Atlassian
JIRA_BASE_URL=https://your-company.atlassian.net
JIRA_EMAIL=your-email@company.com
JIRA_API_TOKEN=your-jira-api-token-here

# Google Workspace (Drive, Calendar, Gmail)
GOOGLE_SERVICE_ACCOUNT_FILE=/path/to/service-account.json
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# GitHub Integration
GITHUB_APP_ID=123456
GITHUB_PRIVATE_KEY_PATH=/path/to/github-app-private-key.pem
GITHUB_TOKEN=ghp_your-github-personal-access-token

# Confluence (if separate from Jira)
CONFLUENCE_URL=https://your-company.atlassian.net/wiki
CONFLUENCE_EMAIL=your-email@company.com
CONFLUENCE_API_TOKEN=your-confluence-token

# ----------------------------------------------------------------------------
# AI/ML Provider APIs
# ----------------------------------------------------------------------------

# OpenAI (PRIMARY)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# Anthropic Claude (FALLBACK)
CLAUDE_API_KEY=sk-ant-your-claude-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-claude-api-key-here
CLAUDE_MODEL=claude-3-opus-20240229

# Model Configuration
EMBEDDING_MODEL=text-embedding-ada-002
MAX_TOKENS=4096
TEMPERATURE=0.7

# ----------------------------------------------------------------------------
# Monitoring & Observability
# ----------------------------------------------------------------------------

# Prometheus
PROMETHEUS_PORT=9090
PROMETHEUS_PUSHGATEWAY=http://localhost:9091

# Jaeger Tracing
OTEL_EXPORTER_JAEGER_ENDPOINT=http://localhost:14250
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831

# Sentry Error Tracking (optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development

# ----------------------------------------------------------------------------
# Security & Encryption
# ----------------------------------------------------------------------------

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256

# Encryption for PII fields
ENCRYPTION_KEY=your-32-byte-base64-encoded-encryption-key

# ----------------------------------------------------------------------------
# Performance & Rate Limiting
# ----------------------------------------------------------------------------

# API Rate Limits
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Query Performance
QUERY_TIMEOUT_SECONDS=30
MAX_CONCURRENT_QUERIES=100

# Vector Search Configuration
VECTOR_SEARCH_TOP_K=20
GRAPH_TRAVERSAL_MAX_DEPTH=3

# ----------------------------------------------------------------------------
# Development & Testing
# ----------------------------------------------------------------------------

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enable SQL query logging (development only)
SQL_ECHO=false

# Enable detailed error traces
SHOW_ERROR_DETAILS=true

# Test Database URLs (for pytest)
TEST_NEO4J_URI=bolt://localhost:7688
TEST_MONGODB_URL=mongodb://localhost:27017/twinops_test
TEST_REDIS_URL=redis://localhost:6380/0

# ----------------------------------------------------------------------------
# Feature Flags
# ----------------------------------------------------------------------------

# Enable/disable specific features
ENABLE_SLACK_BOT=true
ENABLE_JIRA_INTEGRATION=true
ENABLE_GITHUB_INTEGRATION=true
ENABLE_GOOGLE_WORKSPACE=true
ENABLE_WORKFLOW_AUTOMATION=true

# Enable experimental features
ENABLE_ADVANCED_GRAPH_RAG=true
ENABLE_AUTO_DELEGATION=true
