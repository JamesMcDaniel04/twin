apiVersion: v1
kind: Secret
metadata:
  name: twinops-secrets
  namespace: twinops
type: Opaque
stringData:
  # IMPORTANT: This is an example file. DO NOT commit actual secrets!
  # In production, use external secrets management (AWS Secrets Manager, HashiCorp Vault, etc.)

  # Security
  SECRET_KEY: "your-secret-key-here-change-me"
  TWINOPS_SECRET_KEY: "your-twinops-secret-key-here"
  JWT_SECRET_KEY: "your-jwt-secret-key-here"
  ENCRYPTION_KEY: "your-32-byte-base64-encoded-key-here"

  # Database Credentials
  NEO4J_USER: "neo4j"
  NEO4J_PASSWORD: "your-neo4j-password"

  # Pinecone
  PINECONE_API_KEY: "your-pinecone-api-key"
  PINECONE_ENVIRONMENT: "us-east-1-aws"
  PINECONE_INDEX: "twinops-prod"

  # AI Provider Keys
  OPENAI_API_KEY: "sk-your-openai-api-key"
  CLAUDE_API_KEY: "sk-ant-your-claude-api-key"
  ANTHROPIC_API_KEY: "sk-ant-your-anthropic-api-key"

  # Slack Integration
  SLACK_BOT_TOKEN: "xoxb-your-slack-bot-token"
  SLACK_SIGNING_SECRET: "your-slack-signing-secret"
  SLACK_APP_TOKEN: "xapp-your-slack-app-token"

  # Jira Integration
  JIRA_BASE_URL: "https://your-company.atlassian.net"
  JIRA_EMAIL: "your-email@company.com"
  JIRA_API_TOKEN: "your-jira-api-token"

  # GitHub Integration
  GITHUB_APP_ID: "123456"
  GITHUB_TOKEN: "ghp_your-github-token"

  # Google Workspace
  GOOGLE_SERVICE_ACCOUNT_FILE: "/secrets/google-service-account.json"

  # Sentry (Error Tracking)
  SENTRY_DSN: "https://your-sentry-dsn@sentry.io/project-id"
